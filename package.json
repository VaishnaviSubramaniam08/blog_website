{
  "name": "blogtalentio",
  "version": "1.0.0",
  "description": "Blog website with chat application",
  "scripts": {
    "blog": "cd frontend && npm start",
    "chat": "cd chat-app && npm start",
    "backend": "cd backend && npm start",
    "chat-server": "cd server && npm start",
    "dev-blog": "concurrently \"npm run backend\" \"npm run blog\"",
    "dev-chat": "concurrently \"npm run chat-server\" \"npm run chat\"",
    "install-all": "npm install && cd frontend && npm install && cd ../chat-app && npm install && cd ../server && npm install && cd ../backend && npm install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "socket.io-client": "^4.7.2",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
